<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    tools:context=".activity.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="278dp"
                android:layout_height="71dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_text"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="Shoo"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#232323"
                android:layout_margin="2dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="Shoo"
                android:layout_margin="2dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/motive"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"

            />


    </LinearLayout>



            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/logo_pink"
                android:layout_gravity="center"
                android:padding="25dp"
                />


            <LinearLayout
                android:id="@+id/user_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                >
                <ImageView
                    android:id="@+id/iv_user_icon"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_margin="5dp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:srcCompat="@drawable/username_normal"
                    />
                <EditText
                    android:id="@+id/edt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:hint="@string/username"
                    android:fontFamily="@font/raleway_medium"
                    android:background="#007E7E7E"
                    android:textColorHint="@color/color_hint"
                    android:textColor="@color/color_text"
                    android:inputType="text"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    />



            </LinearLayout>
            <View
                android:id="@+id/user_name_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="@color/gray_text"/>
            <LinearLayout
                android:id="@+id/pws_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/iv_pws_icon"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_margin="5dp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:srcCompat="@drawable/password_normal"
                    />
                <EditText
                    android:id="@+id/edt_pws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:hint="@string/pws"
                    android:background="#00FFFFFF"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/raleway_medium"
                    android:textColorHint="@color/color_hint"
                    android:textColor="@color/color_text"
                    android:inputType="textPassword"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:padding="2dp"
                    />
                <ImageView
                    android:id="@+id/iv_red_eye"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_margin="5dp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_visibility_off_black_24dp"
                    />



            </LinearLayout>

            <View
                android:id="@+id/pws_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="@color/gray_text"/>

            <TextView
                android:id="@+id/btn_forget_pws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/forget_pws"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:textColor="@color/color_text"
                android:fontFamily="@font/raleway_medium"
                />
   <android.support.v7.widget.AppCompatTextView
       android:id="@+id/btn_login"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/submit_button"
       android:text="@string/login"
       android:layout_marginTop="25dp"
       android:layout_marginBottom="20dp"
       android:layout_gravity="center"
       android:gravity="center"
       android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
       android:fontFamily="@font/raleway_black"
       android:textColor="@color/white_text"

       />
            <LinearLayout
                android:id="@+id/sign_up_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I don't have an account?"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#CCCCCC"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/raleway_medium"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/pink_drak"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />


            </LinearLayout>





       <View
           android:layout_width="wrap_content"
           android:layout_height="50dp"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>