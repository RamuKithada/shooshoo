<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:id="@+id/activity_main"
    tools:context=".activity.ProfileFillingFormActivity"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
<include layout="@layout/registration_toolbar"/>

   <LinearLayout
       android:id="@+id/ll_upload_photo_layout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="center"
       >
       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/iv_profile_pic"
           android:layout_width="@dimen/photo_upload_icon"
           android:layout_height="@dimen/photo_upload_icon"
           android:layout_gravity="center"
           android:src="@drawable/photo_upload"
           android:padding="2dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:textColor="#FFFFFF"
           android:layout_marginTop="8dp"
           android:fontFamily="@font/raleway_medium"
           android:text="Upload Photo"
           />


   </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_user_fname"
            android:layout_width="@dimen/edit_icon"
            android:layout_height="@dimen/edit_icon"
            android:padding="8dp"
            android:src="@drawable/lastname_normal"
            android:layout_gravity="center_vertical"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="User Name"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />
    </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/edit_icon"
        >


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_first_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="First Name"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="Last Name"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/edit_icon"
        >


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_dob"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:hint="Date of Birth"
            android:focusable="false"
            android:clickable="true"
            android:fontFamily="@font/raleway_medium"
            android:theme="@style/MyEditTextTheme"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="Gender"
            android:focusable="false"
            android:clickable="true"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:fontFamily="@font/raleway_medium"
            android:theme="@style/MyEditTextTheme"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/edit_icon"
            android:layout_height="@dimen/edit_icon"
            android:padding="8dp"
            android:src="@drawable/location_country"
            android:layout_gravity="center_vertical"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="Select Country"
            android:focusable="false"
            android:clickable="true"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />







    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/edit_icon"
        >


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_zipcode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="Zip Code"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="City"
            android:focusable="false"
            android:clickable="true"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />
    </LinearLayout>  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/edit_icon"
        >


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_Street"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="Street"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_street_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="Number"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/edit_icon"
            android:layout_height="@dimen/edit_icon"
            android:padding="8dp"
            android:src="@drawable/contacts"
            android:layout_gravity="center_vertical"
            />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="E-mail"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/edit_icon"
            >

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="+49"
            android:minEms="2"
            android:maxEms="5"
            android:layout_marginRight="5dp"
            android:text=""
            android:fontFamily="@font/raleway_medium"
            android:focusable="false"
            android:enabled="false"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />



            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:fontFamily="@font/raleway_medium"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:theme="@style/MyEditTextTheme"
                />
        </LinearLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/next_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_button"
        android:text="NEXT"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/white_text"

        />


</LinearLayout>

</LinearLayout>
    </ScrollView>
</RelativeLayout>