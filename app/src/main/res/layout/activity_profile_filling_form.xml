<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:id="@+id/activity_main"
    tools:context=".activity.ProfileFillingFormActivity"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
<include layout="@layout/registration_toolbar"/>

   <LinearLayout
       android:id="@+id/ll_upload_photo_layout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="center"
       >
       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/iv_profile_pic"
           android:layout_width="@dimen/photo_upload_icon"
           android:layout_height="@dimen/photo_upload_icon"
           android:layout_gravity="center"
           android:src="@drawable/photo_upload"
           android:padding="2dp"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="8dp"
           android:fontFamily="@font/raleway_extrabold"
           android:gravity="center"
           android:textSize="12sp"
           android:text="Upload Photo"
           android:textAllCaps="true"
           android:textColor="#FFFFFF" />


   </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_user_fname"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:src="@drawable/lastname_normal" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="User Name"
                    android:inputType="textPersonName"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_icon"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_icon"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_pws"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_cnf_pws"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_icon"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_dob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="Date of Birth"
                    android:inputType="textPersonName"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="Gender"
                    android:inputType="textPersonName"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:src="@drawable/location_country" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="Select Country"
                    android:inputType="textPersonName"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_icon"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_zipcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="Zip Code"
                    android:inputType="textPersonName"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="City"
                    android:inputType="textPersonName"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_icon"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_Street"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="Street"
                    android:inputType="textPersonName"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_street_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="Number"
                    android:inputType="textPersonName"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:src="@drawable/contacts" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edit_icon"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:enabled="false"
                    android:focusable="false"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="   "
                    android:maxEms="5"
                    android:minEms="2"
                    android:text=""
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/raleway_medium"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:textColor="@color/white_text"
                    android:textColorHint="@color/white_text"
                    android:theme="@style/MyEditTextTheme" />
            </LinearLayout>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/next_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/submit_button"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center"
                android:text="NEXT"
                android:textColor="@color/white_text"
                android:textSize="25sp"

                />


        </LinearLayout>

</LinearLayout>
    </ScrollView>
</RelativeLayout>