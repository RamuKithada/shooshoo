<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_home"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.SignupActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <include layout="@layout/registration_toolbar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:text="@string/signup_tag"
                android:textSize="25sp"
                android:layout_margin="20dp"
                />


            <LinearLayout
                android:id="@+id/user_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/iv_user_name_icon"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_margin="5dp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:srcCompat="@drawable/username_normal"
                    />
                <EditText
                    android:id="@+id/edt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:hint="@string/username"
                    android:background="#00FFFFFF"
                    android:inputType="text"
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/color_gray"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    />



            </LinearLayout>
            <View
                android:id="@+id/user_name_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="@color/gray_text"/>
            <LinearLayout
                android:id="@+id/user_mail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/iv_email_icon"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="8dp"
                    app:srcCompat="@drawable/email_normal"
                    />
                <EditText
                    android:id="@+id/edt_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:hint="@string/emial_hint"
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/color_gray"
                    android:background="#00FFFFFF"
                    android:inputType="text"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    />



            </LinearLayout>
            <View
                android:id="@+id/user_mail_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="@color/gray_text"/>
            <LinearLayout
                android:id="@+id/pws_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/iv_pws_icon"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="8dp"
                    app:srcCompat="@drawable/password_normal"
                    />
                <EditText
                    android:id="@+id/edt_pws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:hint="@string/pws"
                    android:background="#00FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/color_gray"
                    android:layout_margin="2dp"
                    android:inputType="textPassword"
                    android:padding="2dp"
                    />
                <ImageView
                    android:id="@+id/iv_red_eye"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_margin="5dp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_visibility_off_black_24dp"
                    />



            </LinearLayout>

            <View
                android:id="@+id/pws_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:background="@color/gray_text"/>


            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_btn_shape"
                android:text="@string/register"
                android:textSize="18sp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#FFF"

                />
            <LinearLayout
                android:id="@+id/sign_in_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Already have an account?"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#cccccc"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Login"
                    android:layout_margin="2dp"
                    android:textColor="@color/pink_drak"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />


            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>