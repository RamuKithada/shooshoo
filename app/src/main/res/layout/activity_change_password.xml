<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_home"
    tools:context=".activity.registration.ChangePasswordActivity">
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/back_arrow"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/change_pws"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/raleway_extrabold"
            android:textColor="#ffffff"
            />


    </RelativeLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        />

    <FrameLayout
        android:id="@+id/home_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/iv_old_pws_icon"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="8dp"
                    app:srcCompat="@drawable/password_normal"
                    />
                <EditText
                    android:id="@+id/edt_old_pws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:hint="@string/old_pws"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_margin="2dp"
                    android:inputType="textPassword"
                    android:padding="2dp"
                    />




            </LinearLayout>

            <View
                android:id="@+id/old_pws_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_text"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/iv_new_pws_icon"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="8dp"
                    app:srcCompat="@drawable/password_normal"
                    />
                <EditText
                    android:id="@+id/edt_new_pws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:hint="@string/new_pws"
                    android:background="#00FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/raleway_medium"
                    android:inputType="textPassword"
                    android:padding="2dp"
                    />




            </LinearLayout>

            <View
                android:id="@+id/new_pws_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_text"/>
            <LinearLayout
                android:id="@+id/pws_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/iv_cnf_pws_icon"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="8dp"
                    app:srcCompat="@drawable/password_normal"
                    />
                <EditText
                    android:id="@+id/edt_cnf_pws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:hint="@string/cnf_pws"
                    android:background="#00FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/raleway_medium"
                    android:inputType="textPassword"
                    android:padding="2dp"
                    />




            </LinearLayout>

            <View
                android:id="@+id/cnf_pws_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_text"/>




            <Button
                android:id="@+id/btn_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_button"
                android:text="@string/change"
                android:textSize="20sp"
                android:fontFamily="@font/raleway_black"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FFF"

                />


        </LinearLayout>


    </FrameLayout>
</android.support.constraint.ConstraintLayout>