<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profileimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/rose"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_profileimage"
            android:layout_toLeftOf="@+id/layout_followcontainer"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_personname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harikrishna"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF"
                />
            <TextView
                android:id="@+id/tv_personnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+919848224480"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_followcontainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/addfriend_unselect"
                android:layout_gravity="center"
                android:visibility="visible">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text=" Add "
                    android:gravity="center"
                    android:textColor="@android:color/white"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/addfriend"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_add_white_24dp"
                    android:visibility="visible"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/layout_container"
        android:background="@color/gray_text"></View>
</RelativeLayout>
