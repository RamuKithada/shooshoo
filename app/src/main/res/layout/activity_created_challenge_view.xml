<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/container"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/bg_color"
tools:context=".activity.CreatedChallengeViewActivity">
<RelativeLayout
    android:id="@+id/tool_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintLeft_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_title"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/iv_help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_help_notification_icon"
            />



        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/my_challenges"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:fontFamily="@font/raleway_extrabold"
        android:textColor="@color/white_text"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_title"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_chat_notification_icon"
            />
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_profile_notification_icon"
            />
    </LinearLayout>

</RelativeLayout>

<View
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:background="#FFFFFF"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintLeft_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tool_bar"
    />

<android.support.v4.widget.NestedScrollView
    android:id="@+id/home_fragment_container"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/tool_bar"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/bottom_view"
    android:layout_marginTop="1dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/bg_color"
        android:padding="10dp"
        >
        <LinearLayout
            android:id="@+id/top_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"

                >
                <ImageView
                    android:id="@+id/challenge_image"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/young_challange"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    /><TextView
                android:id="@+id/title"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/white_text"
                android:text="Foodball trick shot"
                android:layout_gravity="center"
                android:gravity="center_vertical|left"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:fontFamily="@font/raleway_extrabold"

                />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    >
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="5000 â‚¬"
                        android:padding="1dp"
                        android:background="@color/pink_drak"
                        android:fontFamily="@font/raleway_extrabold"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/white_text"
                        />
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="2h ago"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/raleway_medium"
                        android:textColor="@color/white_text"
                        />



                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="Posts"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:fontFamily="@font/raleway_extrabold"

                        android:textColor="@color/white_text"
                        />
                    <TextView
                        android:id="@+id/no_of_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="2h ago"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textColor="@color/white_text"
                        android:fontFamily="@font/raleway_medium"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="Likes"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:fontFamily="@font/raleway_extrabold"

                        android:textColor="@color/white_text"
                        />
                    <TextView
                        android:id="@+id/no_of_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="2h ago"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textColor="@color/white_text"
                        android:fontFamily="@font/raleway_medium"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="Comments"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:fontFamily="@font/raleway_extrabold"

                        android:textColor="@color/white_text"
                        />
                    <TextView
                        android:id="@+id/no_of_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="2h ago"

                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textColor="@color/white_text"
                        android:fontFamily="@font/raleway_medium"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="Views"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:fontFamily="@font/raleway_extrabold"

                        android:textColor="@color/white_text"
                        />
                    <TextView
                        android:id="@+id/no_of_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="2h ago"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textColor="@color/white_text"
                        android:fontFamily="@font/raleway_medium"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="Clicks"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:fontFamily="@font/raleway_extrabold"

                        android:textColor="@color/white_text"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:id="@+id/no_of_clicks"
                        android:text="2h ago"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textColor="@color/white_text"
                        android:fontFamily="@font/raleway_medium"
                        />



                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/income_lay"
            android:layout_below="@+id/top_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="INCOME"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:fontFamily="@font/raleway_extrabold"
                android:textColor="@color/white_text"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/white_text"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/income_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_text"
                android:fontFamily="@font/raleway_medium"
                android:padding="5dp"
                android:layout_gravity="left"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Recent Posts"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recent_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/profile_feed_list_item"
                >


            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

<RelativeLayout
    android:id="@+id/bottom_view"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    >
    <include
        layout="@layout/bottom_navi"
        />
</RelativeLayout>

</android.support.constraint.ConstraintLayout>