<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradiant_home"
    tools:context=".activity.SponsorChallengeFormActivity">
    <include layout="@layout/stagebar_layout"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >


                <EditText
                    android:id="@+id/edt_challenge_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF"
                    android:inputType="textPersonName"
                    android:textColorHint="#CCCCCC"
                    android:hint="Challenge Name"
                    />
                <View
                    android:id="@+id/edt_challenge_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/edt_challenge_name"
                    android:background="@color/color_gray"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    >


                    <EditText
                        android:id="@+id/edt_startdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="#00FFFFFF"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:editable="false"
                        android:focusable="false"
                        android:inputType="date"
                        android:textColorHint="#CCCCCC"
                        android:hint="Start Date"
                        />
                    <View
                        android:id="@+id/startdate_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/edt_startdate"
                        android:background="@color/color_gray"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    >


                    <EditText
                        android:id="@+id/edt_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="#00FFFFFF"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:editable="false"
                        android:focusable="false"
                        android:inputType="time"
                        android:textColorHint="#CCCCCC"
                        android:hint="Start Time"
                        />
                    <View
                        android:id="@+id/starttime_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/edt_start_time"
                        android:background="@color/color_gray"
                        />
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    >


                    <EditText
                        android:id="@+id/edt_enddate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="#00FFFFFF"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:editable="false"
                        android:focusable="false"
                        android:inputType="date"
                        android:textColorHint="#CCCCCC"
                        android:hint="End Date"
                        />
                    <View
                        android:id="@+id/enddate_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/edt_enddate"
                        android:background="@color/color_gray"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    >


                    <EditText
                        android:id="@+id/edt_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="#00FFFFFF"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:editable="false"
                        android:focusable="false"
                        android:inputType="time"
                        android:textColorHint="#CCCCCC"
                        android:hint="End Time"
                        />
                    <View
                        android:id="@+id/endtime_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/edt_end_time"
                        android:background="@color/color_gray"
                        />
                </RelativeLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >


                <EditText
                    android:id="@+id/edt_challenge_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF"
                    android:inputType="text"
                    android:textColorHint="#CCCCCC"
                    android:hint="Challenge Description"
                    />
                <View
                    android:id="@+id/edt_challenge_des_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/edt_challenge_des"
                    android:background="@color/color_gray"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <CheckBox
                    android:id="@+id/ch_photo_entites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/selector_check"
                    android:text="@string/photo_entries"
                    android:layout_margin="2dp"
                    android:textSize="18sp"
                    android:textColor="#FFF"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:text=""
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#CCCCCC"
                    android:visibility="gone"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:visibility="gone"
                    >


                    <EditText
                        android:id="@+id/edt_photo_entries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="#00FFFFFF"
                        android:textColor="#FFFFFF"
                        android:inputType="number"
                        android:textColorHint="#CCCCCC"

                        />
                    <View
                        android:id="@+id/edt_photo_entries_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/edt_photo_entries"
                        android:background="@color/color_gray"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/no_of_photos"
                    android:textColor="@color/pink_drak"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <CheckBox
                    android:id="@+id/ch_video_entites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/selector_check"
                    android:text="@string/video_entries"
                    android:layout_margin="2dp"
                    android:textSize="18sp"
                    android:textColor="#FFF"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_entries"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#CCCCCC"
                    android:visibility="gone"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:visibility="gone"
                    >


                    <EditText
                        android:id="@+id/edt_video_entries"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="#00FFFFFF"
                        android:textColor="#FFFFFF"
                        android:inputType="number"
                        android:textColorHint="#CCCCCC"

                        />
                    <View
                        android:id="@+id/edt_video_entries_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/edt_video_entries"
                        android:background="@color/color_gray"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >


                    <Spinner
                        android:id="@+id/spinner_video_sizes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="#00FFFFFF"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#CCCCCC"
                        android:layout_toLeftOf="@+id/iv_video_size"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/iv_video_size"
                        android:background="@color/color_gray"
                        />
                    <ImageView
                        android:id="@+id/iv_video_size"
                        android:layout_width="@dimen/dropdown_icon"
                        android:layout_height="@dimen/dropdown_icon"
                        android:padding="8dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/down_angel"
                        android:layout_gravity="center_vertical"
                        />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                >

                <android.support.v7.widget.CardView
                    android:id="@+id/banner_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#8e8e8e"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_banner"
                            android:layout_width="@dimen/photo_upload_icon"
                            android:layout_height="@dimen/photo_upload_icon"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/photo_upload" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/upload_photo"
                            android:textColor="@color/gray_text" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/video_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#8e8e8e"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_video"
                            android:layout_width="@dimen/photo_upload_icon"
                            android:layout_height="@dimen/photo_upload_icon"
                            android:layout_margin="10dp"
                            android:src="@drawable/upload_video"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upload_video"
                            android:layout_gravity="center"
                            android:textColor="@color/gray_text"
                            android:gravity="center"
                            />


                    </LinearLayout>

                </android.support.v7.widget.CardView>



            </LinearLayout>
            <TextView
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Next"
                android:textSize="18sp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/submit_btn_shape"
                />

        </LinearLayout>


    </ScrollView>

</LinearLayout>