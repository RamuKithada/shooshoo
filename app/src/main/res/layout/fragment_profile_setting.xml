<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradiant_home"
    tools:context=".fragment.ProfileSettingFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_upload_photo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="@dimen/photo_upload_icon"
                android:layout_height="@dimen/photo_upload_icon"
                android:layout_gravity="center"
                android:src="@drawable/photo_upload"
                android:padding="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/raleway_medium"
                android:text="Upload Photo"
                />


        </LinearLayout>

<android.support.v7.widget.AppCompatTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/login"
    android:fontFamily="@font/raleway_extrabold"
    android:textSize="18sp"
    android:textAllCaps="true"
    android:padding="5dp"
    android:textColor="#85868A"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="User Name"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_user_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="E-mail"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />





</LinearLayout>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Information"
        android:fontFamily="@font/raleway_extrabold"
        android:textSize="18sp"
        android:padding="5dp"
        app:textAllCaps="true"
        android:textColor="#85868A"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_first_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:hint="First Name"
                android:fontFamily="@font/raleway_medium"
                android:inputType="textPersonName"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:theme="@style/MyEditTextTheme"
                />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:hint="Last Name"
                android:fontFamily="@font/raleway_medium"
                android:inputType="textPersonName"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:theme="@style/MyEditTextTheme"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_dob"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:inputType="textPersonName"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:hint="Date of Birth"
                android:focusable="false"
                android:clickable="true"
                android:fontFamily="@font/raleway_medium"
                android:theme="@style/MyEditTextTheme"
                />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:hint="Gender"
                android:focusable="false"
                android:clickable="true"
                android:inputType="textPersonName"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:fontFamily="@font/raleway_medium"
                android:theme="@style/MyEditTextTheme"
                />
        </LinearLayout>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="Select Country"
            android:focusable="false"
            android:clickable="true"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_zipcode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:hint="Zip Code"
                android:fontFamily="@font/raleway_medium"
                android:inputType="textPersonName"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:theme="@style/MyEditTextTheme"
                />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:hint="City"
                android:focusable="false"
                android:clickable="true"
                android:fontFamily="@font/raleway_medium"
                android:inputType="textPersonName"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:theme="@style/MyEditTextTheme"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_street_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:hint="Street"
                android:fontFamily="@font/raleway_medium"
                android:inputType="textPersonName"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:theme="@style/MyEditTextTheme"
                />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_street_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:hint="Number"
                android:fontFamily="@font/raleway_medium"
                android:inputType="textPersonName"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:theme="@style/MyEditTextTheme"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="+49"
                android:minEms="2"
                android:maxEms="5"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text=""
                android:fontFamily="@font/raleway_medium"
                android:focusable="false"
                android:enabled="false"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:theme="@style/MyEditTextTheme"
                />



            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:fontFamily="@font/raleway_medium"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:theme="@style/MyEditTextTheme"
                />
        </LinearLayout>


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categories"
            android:fontFamily="@font/raleway_extrabold"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:padding="5dp"
            android:textColor="#85868A"
            />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cat_subcat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:nestedScrollingEnabled="false"
        tools:itemCount="1"
        tools:listitem="@layout/add_category_item"
        >


    </android.support.v7.widget.RecyclerView>


            <ImageView
                android:id="@+id/btn_more_categories"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:layout_gravity="right"
                android:scaleType="centerInside"
                android:src="@drawable/plus_icon2"
                />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Details"
            android:fontFamily="@font/raleway_extrabold"
            android:textSize="18sp"
            android:padding="5dp"
            app:textAllCaps="true"
            android:textColor="#85868A"
            />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_iban"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_medium"
            android:hint="IBAN"
            android:inputType="textPersonName"
            android:textColor="@color/white_text"
            android:textColorHint="@color/white_text"
            android:theme="@style/MyEditTextTheme" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_bic_swift"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:hint="BIC/SWIFT"
            android:fontFamily="@font/raleway_medium"
            android:inputType="textPersonName"
            android:textColorHint="@color/white_text"
            android:textColor="@color/white_text"
            android:theme="@style/MyEditTextTheme"
            />






    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_acc_owner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:hint="Account Owner"
                android:fontFamily="@font/raleway_medium"
                android:inputType="textPersonName"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:theme="@style/MyEditTextTheme"
                />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_bank_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:hint="Name of the Bank"
                android:fontFamily="@font/raleway_medium"
                android:inputType="textPersonName"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                android:theme="@style/MyEditTextTheme"
                />






        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btn_save_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textColor="#FFF"
            android:fontFamily="@font/raleway_black"
            android:layout_gravity="left|center_vertical"
            android:gravity="center"
            android:textSize="25sp"
            android:textAllCaps="true"
            android:layout_margin="10dp"
            android:background="@drawable/submit_button"
            />


</LinearLayout>
    </ScrollView>
</RelativeLayout>