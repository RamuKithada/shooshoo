<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradiant_home"
    tools:context=".fragment.ProfileSettingFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Login Details"
    android:fontFamily="@font/futura_medium_bt"
    android:textSize="18sp"
    android:padding="5dp"
    android:textColor="#FFF"
    android:layout_margin="10dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="@color/color_gray"
                android:hint="User Name"
                />
            <View
                android:id="@+id/user_name_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/color_gray"
                android:hint="Email-Id"
                />
            <View
                android:id="@+id/user_email_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>






</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Information"
        android:fontFamily="@font/futura_medium_bt"
        android:textSize="18sp"
        android:padding="5dp"
        android:textColor="#FFF"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="@color/color_gray"
                android:hint="First Name"
                />
            <View
                android:id="@+id/first_name_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="@color/color_gray"
                android:hint="Last Name"
                />
            <View
                android:id="@+id/last_name_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <EditText
                    android:id="@+id/edt_city"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/color_gray"
                    android:layout_margin="5dp"
                    android:drawablePadding="5dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:focusableInTouchMode="false"
                    android:hint="City"
                    android:drawableRight="@drawable/ic_spinner_icon"
                    />

            </LinearLayout>
            <View
                android:id="@+id/city_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <EditText
                    android:id="@+id/edt_country"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/color_gray"
                    android:layout_margin="5dp"
                    android:drawablePadding="5dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:focusableInTouchMode="false"
                    android:hint="Country"
                    android:drawableRight="@drawable/ic_spinner_icon"
                    />
            </LinearLayout>
            <View
                android:id="@+id/state_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray"
                />

        </LinearLayout>






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_street_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="@color/color_gray"
                android:hint="Street Name"
                />
            <View
                android:id="@+id/street_name_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_street_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="@color/color_gray"
                android:hint="Street Number"
                />
            <View
                android:id="@+id/street_number_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="@color/color_gray"
                android:hint="Zipcode"
                />
            <View
                android:id="@+id/zipcode_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="phone"
                android:textColorHint="@color/color_gray"
                android:hint="Mobile Number"
                />
            <View
                android:id="@+id/mobile_number_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <EditText
                    android:id="@+id/edt_gender"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHint="@color/color_gray"
                    android:layout_margin="5dp"
                    android:drawablePadding="5dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Gender"
                    android:drawableRight="@drawable/ic_spinner_icon"
                    />
            </LinearLayout>
            <View
                android:id="@+id/gender_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >



        </LinearLayout>







    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="@string/categories"
        android:fontFamily="@font/futura_medium_bt"
        android:textColor="#FFF"
        android:textSize="18sp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cat_subcat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/add_category_item"
        >


    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_margin="20dp"
            >
            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/save"
                android:textSize="18sp"
                android:textColor="#FFF"
                android:layout_gravity="right|center_vertical"
                android:gravity="center"
                android:background="@drawable/view_all_btn_shape"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_margin="20dp"
            >
            <TextView
                android:id="@+id/btn_more_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/more_categories"
                android:textColor="#FFF"
                android:layout_gravity="right|center_vertical"
                android:gravity="center"
                android:background="@drawable/view_more_btn_shape"
                />
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank Details"
        android:fontFamily="@font/futura_medium_bt"
        android:textSize="18sp"
        android:padding="5dp"
        android:textColor="#FFF"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_iban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="#CCCCCC"
                android:hint="IBAN"
                />
            <View
                android:id="@+id/iban_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_bic_swift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="#CCCCCC"
                android:hint="BIC/SWIFT"
                />
            <View
                android:id="@+id/bic_swift_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_acc_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="#CCCCCC"
                android:hint="Account Owner"
                />
            <View
                android:id="@+id/acc_owner_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/edt_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="#CCCCCC"
                android:hint="Name of the Bank"
                />
            <View
                android:id="@+id/bank_name_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_text"
                />
        </LinearLayout>






    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="left"
        android:layout_margin="20dp"
        >
        <TextView
            android:id="@+id/btn_save_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/save"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            android:background="@drawable/view_all_btn_shape"
            />
    </FrameLayout>
</LinearLayout>
    </ScrollView>
</RelativeLayout>