<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activity.registration.CategoryChooseActivity">
    <LinearLayout
        android:id="@+id/top_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include layout="@layout/registration_toolbar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose at least 3 categories \n of your interest"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/raleway_medium"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"
            />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_lay"
        android:layout_above="@id/next_lay"
        android:layout_margin="16dp"

        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/next_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_button"
        android:text="NEXT"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/white_text"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>