<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@drawable/gradiant_home"
    tools:context=".fragment.WinnersUserWiseFragment">
    <LinearLayout
        android:id="@+id/full_view_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <LinearLayout
            android:id="@+id/best_lay"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/pink_drak"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/pink_drak"
                android:layout_margin="2dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/friends_lay"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Followed"
                android:textSize="14sp"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/white_text"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#85868A"
                android:layout_margin="2dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_lay"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sponsor"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/white_text"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#85868A"
                android:layout_margin="2dp"
                />

        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v4.view.ViewPager>

</LinearLayout>