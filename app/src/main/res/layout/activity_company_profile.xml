<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradiant_home"
    tools:context=".activity.CompanyProfileActivity">
    <include layout="@layout/stagebar_layout"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <LinearLayout
                android:id="@+id/ll_upload_photo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/photo_upload"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:text="Upload Company Logo"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/iv_company_name"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:padding="8dp"
                    android:src="@drawable/company_name_normal"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/edt_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF"
                    android:inputType="textPersonName"
                    android:textColorHint="#CCCCCC"
                    android:hint="Company Name"
                    />
            </LinearLayout>
            <View
                android:id="@+id/company_name_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/color_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/iv_country"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:padding="8dp"
                    android:src="@drawable/country_normal"
                    android:layout_gravity="center_vertical"
                    />
                <RelativeLayout
                    android:id="@+id/country_lay"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"

                    android:layout_gravity="center"
                    >
                    <Spinner
                        android:id="@+id/spinner_country"
                        android:layout_toLeftOf="@+id/iv_dropdown_county"
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="#00FFFFFF"
                        />
                    <ImageView
                        android:id="@+id/iv_dropdown_county"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="8dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/down_angel"
                        android:layout_gravity="center_vertical"
                        />

                </RelativeLayout>




            </LinearLayout>
            <View
                android:id="@+id/country_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/color_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_city"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:src="@drawable/city_normal" />

                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:hint="City"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC" />


                <ImageView
                    android:id="@+id/iv_dropdown_city"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:src="@drawable/down_angel" />
            </LinearLayout>
            <View
                android:id="@+id/city_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/color_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/iv_zip_code"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:padding="8dp"
                    android:src="@drawable/zipcode_normal"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/edt_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF"
                    android:inputType="number"
                    android:textColorHint="#CCCCCC"
                    android:hint="Zip Code"
                    />
            </LinearLayout>
            <View
                android:id="@+id/zipcode_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/color_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/iv_street_name"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:padding="8dp"
                    android:src="@drawable/street_normal"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/edt_Street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:layout_margin="5dp"
                    android:hint="Street Name"
                    />
            </LinearLayout>
            <View
                android:id="@+id/street_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/color_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/iv_street_no"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:padding="8dp"
                    android:src="@drawable/streetno_normal"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/edt_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:layout_margin="5dp"
                    android:hint="Street Number"
                    />
            </LinearLayout>
            <View
                android:id="@+id/number_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/color_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        >

                        <ImageView
                            android:id="@+id/iv_mobile"
                            android:layout_width="@dimen/edit_icon"
                            android:layout_height="@dimen/edit_icon"
                            android:padding="8dp"
                            android:src="@drawable/mobile_normal"
                            android:layout_gravity="center_vertical"
                            />
                        <EditText
                            android:id="@+id/edt_country_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#00FFFFFF"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#CCCCCC"
                            android:layout_margin="6dp"
                            android:enabled="false"
                            android:hint=""
                            />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        >


                        <EditText
                            android:id="@+id/edt_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#00FFFFFF"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#CCCCCC"
                            android:inputType="phone"
                            android:layout_margin="5dp"
                            android:hint="Mobile Number"
                            />
                    </LinearLayout>


                </LinearLayout>





            </LinearLayout>
            <View
                android:id="@+id/country_code_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/color_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/iv_tax_no"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:padding="8dp"
                    android:src="@drawable/tax_normal"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/edt_tax_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:layout_margin="5dp"
                    android:hint="Tax Number"
                    />
            </LinearLayout>
            <View
                android:id="@+id/tax_number_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/color_gray"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/iv_user_fname"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:padding="8dp"
                    android:src="@drawable/username_normal"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF"
                    android:inputType="textPersonName"
                    android:textColorHint="#CCCCCC"
                    android:hint="First Name"
                    />
            </LinearLayout>
            <View
                android:id="@+id/firstname_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/color_gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/iv_user_lname"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:padding="8dp"
                    android:src="@drawable/lastname_normal"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/edt_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00FFFFFF"
                    android:textColor="#FFFFFF"
                    android:inputType="textPersonName"
                    android:textColorHint="#CCCCCC"
                    android:layout_margin="5dp"
                    android:hint="Last Name"
                    />
            </LinearLayout>
            <View
                android:id="@+id/lastname_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/color_gray"
                />
            <LinearLayout
                android:id="@+id/user_mail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_email_icon"
                    android:layout_width="@dimen/edit_icon"
                    android:layout_height="@dimen/edit_icon"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="8dp"
                    app:srcCompat="@drawable/email_normal"
                    />
                <EditText
                    android:id="@+id/edt_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:hint="@string/emial_hint"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:background="#00FFFFFF"
                    android:inputType="textEmailAddress"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    />



            </LinearLayout>
            <View
                android:id="@+id/user_mail_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/gray_text"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_margin="20dp"
            >
            <TextView
                android:id="@+id/btn_more_companies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/more_companies"
                android:textSize="18sp"
                android:textColor="#FFF"
                android:layout_gravity="right|center_vertical"
                android:gravity="center"
                android:background="@drawable/view_more_btn_shape"
                />
        </FrameLayout>

            <CheckBox
                android:id="@+id/private_sponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/private_sponsor"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:gravity="right|center_vertical"
                android:drawableRight="@drawable/selector_check"
                android:textAppearance="@android:style/TextAppearance.Widget.TextView.PopupMenu"
                android:buttonTint="@color/colorAccent"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/next"
                android:textSize="18sp"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/submit_btn_shape"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>