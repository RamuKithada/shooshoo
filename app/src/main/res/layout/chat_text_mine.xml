<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/bg_color"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="0.2"

                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                >
                <TextView
                    android:id="@+id/message_sent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hai Sample Mesage text two dsu dhij hisd  sdji jisd jijsda isdan ijsdio sd jiisd kiisd ankn sida"
                    android:textColor="@color/white_text"
                    android:background="@drawable/chat_msg_right_bg"
                    />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/time_sent"
            android:layout_below="@id/message_layout"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textColor="@color/white_text"
            android:text="9:00 Am"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            />
    </RelativeLayout>
</LinearLayout>