<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:padding="10dp"
    tools:context=".activity.EnteredChallengeViewActivity">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/top_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"

            >
            <ImageView
                android:id="@+id/challenge_inage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/young_challange"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="1"
                android:layout_marginLeft="2dp"
                android:padding="8dp"
                android:textColor="@color/white_text"
                android:text="Foodball trick shot"
                android:layout_gravity="center"
                android:gravity="center_vertical|left"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:fontFamily="@font/raleway_extrabold"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/pink_drak"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="Ranking"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:fontFamily="@font/raleway_extrabold"
                    android:textColor="@color/white_text"
                    />
                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="2"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@color/white_text"
                    android:fontFamily="@font/raleway_extrabold"
                    />



            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="Posts"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:fontFamily="@font/raleway_extrabold"

                android:textColor="@color/white_text"
                />
            <TextView
                android:id="@+id/no_of_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="2h ago"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/white_text"
                android:fontFamily="@font/raleway_medium"
                />



        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="Likes"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:fontFamily="@font/raleway_extrabold"

                    android:textColor="@color/white_text"
                    />
                <TextView
                    android:id="@+id/no_of_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="2h ago"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@color/white_text"
                    android:fontFamily="@font/raleway_medium"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="Comments"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:fontFamily="@font/raleway_extrabold"

                    android:textColor="@color/white_text"
                    />
                <TextView
                    android:id="@+id/no_of_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="2h ago"

                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@color/white_text"
                    android:fontFamily="@font/raleway_medium"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="Views"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:fontFamily="@font/raleway_extrabold"

                    android:textColor="@color/white_text"
                    />
                <TextView
                    android:id="@+id/no_of_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="2h ago"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@color/white_text"
                    android:fontFamily="@font/raleway_medium"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="Clicks"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:fontFamily="@font/raleway_extrabold"

                    android:textColor="@color/white_text"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:id="@+id/no_of_clicks"
                    android:text="2h ago"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@color/white_text"
                    android:fontFamily="@font/raleway_medium"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="Uploads"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:fontFamily="@font/raleway_extrabold"

                    android:textColor="@color/white_text"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:id="@+id/no_of_uploads"
                    android:text="2h ago"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@color/white_text"
                    android:fontFamily="@font/raleway_medium"
                    />



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/top_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_text"
            android:fontFamily="@font/raleway_medium"
            android:padding="5dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Recent Posts"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recnet_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/profile_feed_list_item"
            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>