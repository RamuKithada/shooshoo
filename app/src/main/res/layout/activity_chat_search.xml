<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_home"
    android:orientation="vertical"
    tools:context=".activity.ChatSearchActivity">

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_back_left_black_24dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/search_view_bg"
            >
            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:hint="Search Users"
                android:padding="5dp"
                android:fontFamily="@font/futura_book_font"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColorHint="@color/white_text"
                android:textColor="@color/white_text"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_search_notification_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            />




    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_result_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="1dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        tools:listitem="@layout/chats_search_item"
        >
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/bottom_navi_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        android:background="@drawable/gradiant_home_bottom_navi"

        >
        <LinearLayout
            android:id="@+id/navigation_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:id="@+id/iv_navigation_home"
                android:layout_width="@dimen/botton_navi_icon"
                android:layout_height="@dimen/botton_navi_icon"
                android:layout_gravity="center"
                android:padding="@dimen/botton_navi_icon_padding"
                android:src="@mipmap/home_active"
                />
            <TextView
                android:id="@+id/tv_navigation_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Home"
                android:textSize="@dimen/home_navi_icon"
                android:textColor="@color/pink_drak"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/navigation_challengers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:id="@+id/iv_navigation_challengers"
                android:layout_width="@dimen/botton_navi_icon"
                android:layout_height="@dimen/botton_navi_icon"
                android:layout_gravity="center"
                android:padding="@dimen/botton_navi_icon_padding"
                android:src="@mipmap/challenges_normal"
                />
            <TextView
                android:id="@+id/tv_navigation_challengers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Challenge"
                android:textSize="@dimen/home_navi_icon"
                android:textColor="@color/gray_text"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/navigation_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:id="@+id/iv_navigation_feed"
                android:layout_width="@dimen/botton_navi_icon"
                android:layout_height="@dimen/botton_navi_icon"
                android:layout_gravity="center"
                android:padding="@dimen/botton_navi_icon_padding"
                android:src="@mipmap/feed_normal"
                />
            <TextView
                android:id="@+id/tv_navigation_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Feed"
                android:textSize="@dimen/home_navi_icon"
                android:textColor="@color/gray_text"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/navigation_winners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:id="@+id/iv_navigation_winners"
                android:layout_width="@dimen/botton_navi_icon"
                android:layout_height="@dimen/botton_navi_icon"
                android:layout_gravity="center"
                android:padding="@dimen/botton_navi_icon_padding"
                android:src="@mipmap/winners_normal"
                />
            <TextView
                android:id="@+id/tv_navigation_winners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Winners"
                android:textSize="@dimen/home_navi_icon"
                android:textColor="@color/gray_text"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/navigation_radar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:id="@+id/iv_navigation_radar"
                android:layout_width="@dimen/botton_navi_icon"
                android:layout_height="@dimen/botton_navi_icon"
                android:layout_gravity="center"
                android:padding="@dimen/botton_navi_icon_padding"
                android:src="@mipmap/radar_normal"
                />
            <TextView
                android:id="@+id/tv_navigation_radar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Radar"
                android:textSize="@dimen/home_navi_icon"
                android:textColor="@color/gray_text"
                />


        </LinearLayout>





    </LinearLayout>


</LinearLayout>